<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class=".ItemMedicineBinding">

        <variable
            name="property"
            type="com.mendelin.medicineviewer.model.data.AnmdmMedicine" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtComercialName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@{property.denumire_com}"
            app:layout_constraintEnd_toStartOf="@+id/txtCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="ANALGEX 400 mg/325 mg" />

        <TextView
            android:id="@+id/txtCode"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{property.cim}"
            app:layout_constraintBottom_toBottomOf="@+id/txtComercialName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="W66900001" />

        <TextView
            android:id="@+id/txtDci"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:text="@{property.dci}"
            app:layout_constraintEnd_toStartOf="@+id/txtAtc"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtComercialName"
            tools:text="COMBINATII (IBUPROFENUM+PARACETAMOLUM)" />

        <TextView
            android:id="@+id/txtAtc"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{property.atc}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtComercialName"
            tools:text="M01AE51" />

        <TextView
            android:id="@+id/txtPharmaForm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@{property.ff}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDci"
            tools:text="COMPR. FILM." />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>